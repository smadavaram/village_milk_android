<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llQuantityModification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_quantity_modification_view_size"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:background="@color/ninja_green">

        <ImageView
            android:id="@+id/ivSubtract"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_remove_white_24dp"/>

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="0dp"
            android:layout_height="@dimen/cart_quantity_modification_view_size"
            android:gravity="center"
            android:text="1"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/ninja_green"/>

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_add_white_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_quantity_modification_view_size"
        android:visibility="visible"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cart_quantity_modification_view_size"
            android:gravity="center"
            android:text="ADD TO CART"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/ninja_green"/>
`
    </LinearLayout>


</RelativeLayout>