<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_gutter_margin"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Enter Referral Code"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etReferralCode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_gutter_margin"
        android:paddingLeft="@dimen/activity_gutter_margin_half"
        android:paddingRight="@dimen/activity_gutter_margin_half"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        style="@style/AppThemeBlue.CommonBoxedEditText"/>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/activity_gutter_margin"
        android:layout_gravity="right"
        android:textAllCaps="true"
        android:gravity="center"
        android:text="Submit"
        android:textSize="18sp"
        android:textColor="@color/ninja_green"/>

</LinearLayout>