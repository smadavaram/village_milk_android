<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/im_productImage1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/product_default" />

        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_productImage1"
            android:layout_toLeftOf="@+id/llPrice"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_entry_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="BB Royal Rajma White"/>

            <TextView
                android:id="@+id/unit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/text_dark_grey"
                android:text="500 g"/>

            <TextView
                android:id="@+id/specialText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/text_dark_grey"
                android:text="Get 20% off"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivPoweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llInfo"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/strikePrice"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:id="@+id/llAdd"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_gutter_margin"
                android:orientation="horizontal"
                android:background="@drawable/orange_border">

                <TextView
                    android:id="@+id/tvNotify"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cart_quantity_modification_view_size"
                    android:gravity="center"
                    android:text="NOTIFY ME"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@color/ninja_orange"/>

            </LinearLayout>


        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/light_gray"/>-->

    </RelativeLayout>

    </android.support.v7.widget.CardView>

  </RelativeLayout>