<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/event_box_ht"
    android:layout_margin="0dp"
    android:background="@drawable/event_selector"
    android:orientation="horizontal" >
    
     <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/zupp_ab_yellow"
                android:layout_alignParentTop="true"
                />
        
        <LinearLayout
            android:id="@+id/ll1"
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_height="@dimen/event_box_ht"
    android:orientation="horizontal" >
    
           
        
<!--     <View  -->
<!--         android:id="@+id/colorIndicator" -->
<!--         android:layout_width="13dp" -->
<!--         android:layout_height="fill_parent" -->
<!--         android:layout_marginLeft="0dp" -->
<!--         android:layout_gravity="center_vertical" -->
<!--         android:background="@drawable/left_rounded_box" -->
<!--         /> -->

    <View
        android:id="@+id/colorIndicator"
        android:layout_width="6dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        />


    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="92dp"
    android:orientation="vertical" >
        
        <TextView android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text="Test Event asasf asf asfasf asfasfasf"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView android:id="@+id/tvTimeSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="12:00"
            />
        
        <TextView android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="1 hour at Here"
            android:maxLines="1"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            />
        
        </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/llRightSide"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/event_box_ht"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

             <RelativeLayout
                    android:id="@+id/rlEdit"
                 android:layout_width="90dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="1"
                 >



                 <ImageView
                     android:id="@+id/ivedt"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:layout_marginRight="10dp"
                     android:layout_alignParentLeft="true"
                     android:layout_centerVertical="true"
                     android:src="@drawable/ic_edit_event"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:gravity="center_vertical"
                     android:layout_toRightOf="@id/ivedt"
                     android:id="@+id/tvEdit"
                     android:text="Edit"
                     android:textSize="14dp"
                     android:textColor="@color/black_text_color"
                     />

             </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rlRemove"
                 android:layout_width="90dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="1"
                 >
                 <ImageView
                     android:id="@+id/ivdlt"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:layout_alignParentLeft="true"
                     android:layout_marginRight="10dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/ic_remove_event"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:gravity="center_vertical"
                     android:id="@+id/tvRemove"
                     android:text="Remove"
                     android:layout_toRightOf="@id/ivdlt"
                     android:textSize="14dp"
                     android:textColor="@color/black_text_color"
                     />



             </RelativeLayout>

           </LinearLayout>

    
    </RelativeLayout>

</LinearLayout>