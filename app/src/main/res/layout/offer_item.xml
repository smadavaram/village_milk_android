<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivOffer"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tvOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:layout_marginTop="@dimen/activity_gutter_margin"
        android:layout_marginLeft="@dimen/activity_gutter_margin"
        android:layout_marginRight="@dimen/activity_gutter_margin"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="CASHBACK OF 100"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvOfferDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:layout_marginTop="@dimen/activity_gutter_margin_half"
        android:layout_marginLeft="@dimen/activity_gutter_margin"
        android:layout_marginRight="@dimen/activity_gutter_margin"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="On order value over \u20B91000. You are just \u20B9350 away."
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvAddProducts"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_gutter_margin"
        android:paddingLeft="@dimen/activity_gutter_margin_double"
        android:paddingRight="@dimen/activity_gutter_margin_double"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="CASHBACK OF 100"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"
        android:background="@drawable/add_products_background"/>

    <TextView
        android:id="@+id/tvNotNow"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_gutter_margin_half"
        android:layout_marginBottom="@dimen/activity_gutter_margin_double"
        android:gravity="center"
        android:text="Not Now"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

</LinearLayout>