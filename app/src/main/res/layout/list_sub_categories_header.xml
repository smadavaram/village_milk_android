<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/product_default" />

            <TextView
                android:id="@+id/list_item_section_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_alignTop="@+id/ivHeader"
                android:layout_toRightOf="@+id/ivHeader"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                layout="@android:layout/preference_category"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/list_item_section_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_section_text"
                android:gravity="start|center_vertical"
                android:layout_toRightOf="@+id/ivHeader"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_dark_grey"
                layout="@android:layout/preference_category"
                android:textSize="14dp"/>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:background="@color/light_gray"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray_4"/>
<!--
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentTop="true"
                android:background="@color/ninja_yellow"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/ninja_yellow"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/ninja_yellow"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>