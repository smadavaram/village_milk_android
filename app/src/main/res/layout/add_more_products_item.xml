<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_gutter_margin">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="23"
            android:textSize="36sp"
            android:textColor="@color/ninja_black"/>

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tvDate"
            android:gravity="center"
            android:text="MAR"
            android:textSize="16sp"
            android:textColor="@color/ninja_orange"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/tvDate"
            android:layout_marginLeft="@dimen/activity_gutter_margin"
            android:gravity="center"
            android:text="0 Items"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_below="@+id/tvQuantity"
            android:layout_alignLeft="@+id/tvQuantity"
            android:layout_marginTop="@dimen/activity_gutter_margin_half"
            android:gravity="center"
            android:text="Coming Tomorrow"
            android:textSize="14sp"
            android:textColor="@color/light_gray_4"/>

        <TextView
            android:id="@+id/tvComingTomorrow"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/activity_gutter_margin_half"
            android:paddingRight="@dimen/activity_gutter_margin_half"
            android:gravity="center"
            android:text="Tomorrow"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/tomorrow_text_background"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
