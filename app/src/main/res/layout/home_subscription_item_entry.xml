<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardMaxElevation="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/im_productImage1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/product_default" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/im_productImage1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_item_entry_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:text="Govardan"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="2 x 500ml"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/tvCost"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="2dp"
                    android:text="â‚¹36 everyday"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="13dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEdit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:background="@drawable/orange_border"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cart_quantity_modification_view_size"
                    android:gravity="center"
                    android:text="EDIT"
                    android:textSize="16sp"
                    android:textColor="@color/ninja_orange"/>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>