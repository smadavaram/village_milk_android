<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_gutter_margin_quarter">


    <TextView
        android:id="@+id/tvchatbadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/circle_yellow"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:text="0"/>


    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlSupport"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">



        <ImageView
            android:id="@+id/ivSupport"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_support_tab"/>

        <TextView
            android:id="@+id/tvSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSupport"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Support"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMySubscriptions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivMySubscriptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_basket_tab"/>

        <TextView
            android:id="@+id/tvMySubscriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMySubscriptions"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Subscriptions"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSchedule"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivSchedule"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_schedule_tab"/>

        <TextView
            android:id="@+id/tvSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSchedule"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Schedule"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWallet"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivWallet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_wallet_tab"/>

        <TextView
            android:id="@+id/tvWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivWallet"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="$ 0.00"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark" />

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
