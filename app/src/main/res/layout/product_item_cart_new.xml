<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp"
    app:contentPadding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_productImage1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/product_default"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_entry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxWidth="120dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="Patanjali Wheat Flour Atta"/>

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxWidth="120dp"
                android:textSize="12sp"
                android:textColor="@color/text_dark_grey"
                android:text="500g"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/strikePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/grey"/>




            </LinearLayout>


            <TextView
                android:id="@+id/specialText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="14dp"
                android:textColor="@color/text_dark_grey"
                android:text="This is the special text"/>

            <ImageView
                android:id="@+id/ivPoweredBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@color/accent"
                />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llAddButton"
                android:layout_width="96dp"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                android:gravity="center"
                android:background="@drawable/green_border"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ADD"
                    android:textSize="14sp"
                    android:textColor="@color/bg_blue"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llSubscribe"
                android:layout_width="96dp"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button1"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvSubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SUBSCRIBE"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/llQuantityModification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:background="@drawable/cart_quantity_modification_background"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivSubtract"
                android:layout_width="@dimen/cart_quantity_modification_view_size"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                app:srcCompat="@drawable/ic_subtract_green"/>

            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="@dimen/cart_quantity_modification_view_size"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@color/ninja_green"/>

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="@dimen/cart_quantity_modification_view_size"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                app:srcCompat="@drawable/ic_add_green" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAdd"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/cart_quantity_modification_background">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                android:gravity="center"
                android:text="ADD"
                android:textSize="16sp"
                android:textColor="@color/ninja_green"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNotify"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/orange_border">

            <TextView
                android:id="@+id/tvNotify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cart_quantity_modification_view_size"
                android:gravity="center"
                android:text="NOTIFY ME"
                android:textSize="14sp"
                android:visibility="visible"
                android:textColor="@color/ninja_yellow"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


</LinearLayout>