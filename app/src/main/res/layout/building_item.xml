<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_gutter_margin"
    android:paddingLeft="@dimen/activity_gutter_margin"
    android:paddingRight="@dimen/activity_gutter_margin"
    android:descendantFocusability="blocksDescendants">

    <RadioButton
        android:id="@+id/radioButtonBuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvBuildingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/radioButtonBuilding"
        android:layout_marginLeft="@dimen/activity_gutter_margin"
        android:gravity="left|center_vertical"
        android:text="Mantri Sarovar"
        android:textSize="16sp"
        android:textColor="@color/ninja_black"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBuildingName"
        android:layout_alignLeft="@+id/tvBuildingName"
        android:layout_marginTop="@dimen/activity_gutter_margin_half"
        android:gravity="left|center_vertical"
        android:text="Bannerghatta Road, BTM Layout"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvAddress"
        android:layout_marginTop="@dimen/activity_gutter_margin"
        android:layout_alignLeft="@+id/tvBuildingName"
        android:background="@color/separator_color" />

</RelativeLayout>
