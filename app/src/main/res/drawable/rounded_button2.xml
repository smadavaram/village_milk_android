<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="@color/white_transp" />
            <gradient android:angle="-90" android:startColor="@color/white_transp" android:endColor="@color/white_transp"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="@color/white_transp" />
            <solid android:color="@color/white_transp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="@color/zupp_ab_yellow" />
            <gradient android:angle="-90" android:startColor="@color/white_transp" android:endColor="@color/white_transp"/>
        </shape>
    </item>
</selector>